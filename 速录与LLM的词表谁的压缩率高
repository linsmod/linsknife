æµ…è‰²ç‰ˆæœ¬
import keyboard  # éœ€è¦å®‰è£…: pip install keyboard
import time
from collections import defaultdict

class SimpleStenoSimulator:
    def __init__(self):
        # æ¨¡æ‹Ÿçš„"é€Ÿå½•é”®ä½" (ç”¨QWERTYéƒ¨åˆ†é”®æ¨¡æ‹Ÿ)
        self.left_keys = {'s', 't', 'k', 'p', 'w', 'h', 'r'}  # å£°æ¯
        self.middle_keys = {'a', 'o', 'e', 'u'}              # å…ƒéŸ³
        self.right_keys = {'f', 'p', 'l', 't', 'd'}          # éŸµå°¾
        
        # ç®€åŒ–çš„ç¼–ç è¯å…¸ (ç¤ºä¾‹)
        self.dictionary = {
            # é”®ç»„åˆ -> è¾“å‡ºæ–‡æœ¬
            ('s', 'a'): 'æ²™',
            ('t', 'a'): 'ä»–',
            ('k', 'a'): 'å¡',
            ('s', 't', 'a'): 'sta', # å¯ä»¥æ˜¯æ‹¼éŸ³
            ('c', 'n'): 'ä¸­å›½',     # è‡ªå®šä¹‰é«˜æ•ˆè¯
            ('t', 'h', 'e'): 'the', # è‹±æ–‡ç¤ºä¾‹
            ('q', 'u', 'i', 'c', 'k'): 'å¿«', # è¶…é•¿ç æ˜ å°„
        }
        
        self.current_stroke = set()  # è®°å½•å½“å‰å¹¶å‡»çš„é”®
        self.last_key_time = 0
        self.stroke_timeout = 0.15  # å¹¶å‡»æ—¶é—´çª—å£ (ç§’)
        
        # è®¾ç½®é”®ç›˜ç›‘å¬
        keyboard.on_press(self.on_key_press)
        keyboard.on_release(self.on_key_release)
        
    def on_key_press(self, event):
        current_time = time.time()
        key = event.name.lower()
        
        # åˆ¤æ–­æ˜¯å¦å±äºé€Ÿå½•é”®ä½
        if key in self.left_keys or key in self.middle_keys or key in self.right_keys:
            # æ£€æŸ¥æ˜¯å¦åœ¨ä¸Šä¸€ä¸ªå¹¶å‡»çš„æ—¶é—´çª—å£å†…
            if current_time - self.last_key_time < self.stroke_timeout:
                # å±äºåŒä¸€ä¸ªå¹¶å‡»
                self.current_stroke.add(key)
            else:
                # æ—¶é—´é—´éš”è¿‡é•¿ï¼Œå…ˆå¤„ç†ä¸Šä¸€ä¸ªå¹¶å‡»ï¼ˆå¦‚æœå­˜åœ¨ï¼‰
                if self.current_stroke:
                    self.process_stroke()
                # å¼€å§‹æ–°çš„å¹¶å‡»
                self.current_stroke = {key}
            
            self.last_key_time = current_time
    
    def on_key_release(self, event):
        # ç®€åŒ–å¤„ç†ï¼ŒæŒ‰é”®é‡Šæ”¾æ—¶ä¸ç«‹å³å¤„ç†
        pass
    
    def process_stroke(self):
        if not self.current_stroke:
            return
            
        # å°†å½“å‰å¹¶å‡»çš„é”®æ’åºï¼Œå½¢æˆæ ‡å‡†åŒ–çš„"ç¼–ç "
        stroke_code = tuple(sorted(self.current_stroke))
        
        # æŸ¥è¯å…¸
        output_text = self.dictionary.get(stroke_code, None)
        
        if output_text:
            # æ¨¡æ‹Ÿè¾“å‡º (è¿™é‡Œæ‰“å°åˆ°æ§åˆ¶å°ï¼Œå®é™…å¯ä»¥æ˜¯å‘é€åˆ°æ´»åŠ¨çª—å£)
            print(f"\n[é€Ÿå½•è¾“å‡º] {output_text}")
            # TODO: å®é™…åº”ç”¨ä¸­ï¼Œè¿™é‡Œéœ€è¦è°ƒç”¨ç³»ç»ŸAPIå°†æ–‡æœ¬"è¾“å…¥"åˆ°å½“å‰ç„¦ç‚¹çª—å£
        else:
            # æœªæ‰¾åˆ°åŒ¹é…ï¼Œå¯ä»¥è¾“å‡ºåŸå§‹æŒ‰é”®æˆ–å¿½ç•¥
            print(f"\n[æœªåŒ¹é…] {'+'.join(stroke_code)}")
        
        # æ¸…ç©ºå½“å‰å¹¶å‡»
        self.current_stroke = set()
    
    def run(self):
        print("é€Ÿå½•æ¨¡æ‹Ÿå™¨å·²å¯åŠ¨ (æŒ‰ Ctrl+C é€€å‡º)")
        print("ä½¿ç”¨å·¦ä¾§(s,t,k...)ã€ä¸­é—´(a,o,e...)ã€å³ä¾§(f,p,l...)é”®è¿›è¡Œå¹¶å‡»è¾“å…¥")
        try:
            # ä¿æŒç¨‹åºè¿è¡Œ
            while True:
                time.sleep(0.1)
        except KeyboardInterrupt:
            print("\né€Ÿå½•æ¨¡æ‹Ÿå™¨å·²åœæ­¢")

# --- ä½¿ç”¨ç¤ºä¾‹ ---
if __name__ == "__main__":
    simulator = SimpleStenoSimulator()
    simulator.run()
